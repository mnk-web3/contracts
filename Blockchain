# syntax=docker/dockerfile:1.2

FROM node:18

RUN mkdir /usr/app
WORKDIR /usr/app

RUN yarn global add ganache

ENTRYPOINT ganache \
    -f https://api.s0.b.hmny.io \
   --networkId=1666700000 \
   --server.ws \
   --server.host 0.0.0.0 \
   --server.port 9000 \
   --miner.blockGasLimit 10000000 \
   --miner.defaultGasPrice 100000000000 \
   -d